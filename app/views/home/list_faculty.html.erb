  <script>
     //search dữ liệu trong bảng 
    // Lấy input tìm kiếm và bảng
        const searchInput = document.getElementById('searchInput');
        const table = document.getElementById('table_phongban');
        const rows = table.querySelectorAll('tr');

        // Lưu trạng thái ban đầu của các hàng
        const initialDisplayStates = [...rows].map(row => row.style.display);

        // Sử lý sự kiện tìm kiếm
        searchInput.addEventListener('input', function () {
          const searchTerm = searchInput.value.trim().toLowerCase();

          rows.forEach((row, index) => {
            // Bỏ qua hàng tiêu đề
            if (row.classList.contains('content__table_header')) return;

            const columns = row.querySelectorAll('td');
            let found = false;

            // Kiểm tra nội dung trong cột và ẩn/hiện dựa trên kết quả tìm kiếm
            columns.forEach((column, columnIndex) => {
              if (column.textContent.trim().toLowerCase().includes(searchTerm)) {
                found = true;
                row.style.display = ''; // Hiển thị hàng
              } else if (found === false && columnIndex === columns.length - 1) {
                row.style.display = 'none'; // Ẩn hàng nếu không tìm thấy kết quả
              }
            });
          });
        });

        // Sử lý sự kiện xóa trường tìm kiếm
        searchInput.addEventListener('keyup', function (event) {
          if (event.key === 'Escape' && searchInput.value !== '') {
            searchInput.value = ''; // Xóa nội dung tìm kiếm
            rows.forEach((row, index) => {
              row.style.display = initialDisplayStates[index]; // Hiển thị lại dữ liệu ban đầu
            });
          }
        });
  </script>
