    font-weight: bold;
    margin-left: 20px;
  }
  .breadcrumb__name {
    display: inline-block;
    margin-left: 10px;
    color: #f34f68;
    padding: 12px 0px;
  }
  .content__user {
    display: flex;
    align-items: center;
  }
  .user_icon {
    font-size: 24px;
    margin-right: 14px;
    margin-top: 6px;
  }
  .user__info {
    margin-right: 10px;
    font-size: 16px;
  }
  .user__info p:first-child {
    text-align: right;
  }
  .user__img img {
    border-radius: 50%;
    width: 40px;
    height: 100%;
  }
  .user__img {
    margin-right: 10px;
  }
  .user__detail {
    font-size: 20px;
    cursor: pointer;
    color: gray;
  }
  .content__generality {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    margin: 20px 0px;
    padding: 14px 20px;
    background: #f1f1f1;
