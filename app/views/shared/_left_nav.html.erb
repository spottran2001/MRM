<script>
  var elements = document.getElementsByClassName("menu__items");
  for (const element of elements) {
    element.addEventListener('click', function handleClick() {
      for (const e of elements) {
        e.classList.remove('menu__active');
      }
      element.classList.add('menu__active');
    });
  };
  
  document.getElementById("btn-menu").addEventListener("click",()=>{
    getEle("menu-dropdown").style.transform = "translateX(0px)"
    getEle("menu-dropdown").style.display = "block"
    getEle("menu").style.display = "none"
    getEle("menu").style.transform = "translateX(-10000px)"
  })
  
  document.getElementById("btn-dropdown").addEventListener("click",()=>{
    getEle("menu-dropdown").style.transform = "translateX(-10000px)"
    getEle("menu-dropdown").style.display  = "none"
    getEle("menu").style.transform = "translateX(0px)"
    getEle("menu").style.display  = "block"
    getEle("menu").style.transition = "all 0.5s"
  });
</script>