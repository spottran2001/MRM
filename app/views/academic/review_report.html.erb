        getEle("menu").style.display = "none"
        getEle("menu").style.transform = "translateX(-10000px)"
    })
    
    // add row to table
    function addRow(e) {
      var row  = e.parentNode.parentNode.cloneNode(true)
      e.parentNode.parentNode.parentNode.appendChild(row)
      var tr_size = e.parentNode.parentNode.parentNode.getElementsByTagName("tr").length
      for (let td of e.parentNode.parentNode.parentNode.getElementsByTagName("tr")[(tr_size - 1)]){
        td.innerHTML = ""
      }
    }
    
    
    // delete row form table
    function delRow(e) {
      if (e.parentNode.parentNode.parentNode.getElementsByClassName("content__table_body") <= 1) {
        alert("Can not delete")
      }else{
        e.parentNode.parentNode.parentNode.removeChild(e.parentNode.parentNode)
      }
    }
    
