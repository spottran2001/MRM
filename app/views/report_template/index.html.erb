      <%= render "shared/left_nav"%>
      <div class="content">
        <%= render 'shared/header' %>
        <h1 class="content__name">Quản lý năm báo cáo</h1>
        <div class="content__generality">
          <div class="generality__options">
            <div class="select__options">
              <%#<select aria-label="select__options">
                <option selected value="0">Tổng</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
