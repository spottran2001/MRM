<script>
  let tableIndex = 1;
  let tables = [];

  function showCreateTablePopup() {
      document.getElementById("createTablePopup").style.display = "block";
  }

  function hideCreateTablePopup() {
      document.getElementById("createTablePopup").style.display = "none";
  }

  function showUpdateTablePopup() {
      document.getElementById("updateTablePopup").style.display = "block";
  }

  function hideUpdateTablePopup() {
      document.getElementById("updateTablePopup").style.display = "none";
  }

  function createTable() {
      const tableTitle = document.getElementById("tableTitle").value;
      const numRows = parseInt(document.getElementById("numRows").value);
      const numCols = parseInt(document.getElementById("numCols").value);

      const tableContainer = document.getElementById("tableContainer");
      const table = document.createElement("table");
      table.className = "table";
      table.id = `table${tableIndex}`;
      tables.push(`table${tableIndex}`)
      table.style.width = "100%";

      const ruby = document.createElement("ruby");
      ruby.appendChild(document.createTextNode(tableTitle));
      ruby.style.backgroundColor = "#f4924b";
      ruby.style.textAlign = "left";
      ruby.style.padding = "20px";
      ruby.style.borderTopLeftRadius="12px";
      ruby.style.borderTopRightRadius="12px";
      ruby.style.fontSize ="25px";
      ruby.style.color="#FFFFFF";
      ruby.style.display= "table-caption";
      ruby.style.captionSide="top";
      table.appendChild(ruby);


      for (let i = 0; i < numRows; i++) {
          const row = document.createElement("tr");

          for (let j = 0; j < numCols; j++) {
              const cell = document.createElement(i === 0 ? "th" : "td");
              cell.appendChild(document.createTextNode("Text Text Text "));
              cell.contentEditable=true;
              cell.style.border="1px solid black";
              cell.style.fontSize = "16px";
              cell.style.padding = "10px 0px";
              cell.style.overflow = "hidden";
              cell.style.textAlign= "center";
              if (i < 1) {
              cell.style.backgroundColor = "#DC546C"; // Đặt màu nền cho các ô cột trong hàng sau tiêu đề
              cell.style.color="#FFFFFF";
              }                       
              row.appendChild(cell);
          }

          table.appendChild(row);
      }

      tableContainer.appendChild(table);
      hideCreateTablePopup();
      tableIndex++;
  }
  function showUpdateTablePopup() {
      const tableSelect = document.getElementById("tableSelect");
      tableSelect.innerHTML = "";

      for (let i = 0; i < tables.length; i++) {
          const option = document.createElement("option");
          option.value = tables[i];
          option.text = `Bảng ${i + 1}`;
          tableSelect.appendChild(option);
      }       

      document.getElementById("updateTablePopup").style.display = "block";
      }

  function updateTable() {
      const selectedTable = document.getElementById("tableSelect").value;
      const updateTableTitle = document.getElementById("updateTableTitle").value;
      const updateNumRows = parseInt(document.getElementById("updateNumRows").value);
      const updateNumCols = parseInt(document.getElementById("updateNumCols").value);
      const table = document.getElementById(selectedTable);
      const tableContainer = document.getElementById("tableContainer");
      const lastTable = tableContainer.lastChild;

      // Xóa các border-radius của hàng cuối cùng trước khi cập nhật bảng
      const lastRow = lastTable.rows[lastTable.rows.length - 1];
      lastRow.style.borderBottomLeftRadius = "";
      lastRow.style.borderBottomRightRadius = "";


      if (table && updateTableTitle !== "") {
          const ruby = table.querySelector("ruby");
          ruby.innerHTML = updateTableTitle;
      }
      const rows = table.rows.length;
      const cols = table.rows[0].cells.length;

      if (!isNaN(updateNumRows) && !isNaN(updateNumCols)) {
          if (updateNumRows > rows) {
              for (let i = rows; i < updateNumRows; i++) {
                  const row = table.insertRow(-1);

          for (let j = 0; j < cols; j++) {
              const cell = row.insertCell(-1);
              cell.appendChild(document.createTextNode("Text Text Text "));
              cell.contentEditable = true;
              cell.style.border = "1px solid black";
              cell.style.fontSize = "16px";
              cell.style.padding = "10px 0px";
              cell.style.overflow = "hidden";
              cell.style.textAlign = "center";
              if (i < 1) {
                  cell.style.backgroundColor = "#DC546C";
                  cell.style.color = "#FFFFFF";
              }
          }
      }
          } else if (updateNumRows < rows) {
              for (let i = rows - 1; i >= updateNumRows; i--) {
              table.deleteRow(i);
              }   
           }
          }

  if (updateNumCols > cols) {
    for (let i = 0; i < table.rows.length; i++) {
            const row = table.rows[i];
            for (let j = cols; j < updateNumCols; j++) {
                const cell = row.insertCell(-1);
                cell.appendChild(document.createTextNode("Text Text Text "));
                cell.contentEditable = true;
                cell.style.border = "1px solid black";
                cell.style.fontSize = "16px";
                cell.style.padding = "10px 0px";
                cell.style.overflow = "hidden";
                cell.style.textAlign = "center";
                if (i < 1) {
                    cell.style.backgroundColor = "#DC546C";
                    cell.style.color = "#FFFFFF";
                }
            }
        }
        } else if (updateNumCols < cols) {
        for (let i = 0; i < table.rows.length; i++) {
            const row = table.rows[i];

            for (let j = cols - 1; j >= updateNumCols; j--) {
                row.deleteCell(j);
            }
        }
    }
    hideUpdateTablePopup();
    }

  function hideCreateTablePopup() {
  document.getElementById("createTablePopup").style.display = "none";
  document.getElementById("tableTitle").value = "";
  document.getElementById("numRows").value = "";
  document.getElementById("numCols").value = "";
  }

  function hideUpdateTablePopup() {
  document.getElementById("updateTablePopup").style.display = "none";
  document.getElementById("updateTableTitle").value = "";
  document.getElementById("updateNumRows").value = "";
  document.getElementById("updateNumCols").value = "";
  }
