  function SubmitReport(){
    var content__table_body_td_value_arr = []
    var title_2_title_arr = []

    //get each table
    for (let table of document.getElementsByClassName("content__table")){
      let title = table.getElementsByClassName("tableHeader")[0];
      let title_value = title.innerText.split(" ")[1];

      //get each key
      for(let title_2 of table.getElementsByClassName("key_title")){ // title2_1, title2_2, ......
        title_2_title_arr.push(title_2.value);
        let title_2_value_array = []
        //get each row in table
        for (let content__table_body of title_2.parentElement.parentElement.parentNode.getElementsByClassName("content__table_body")){
          let title_2_value = "";
          //get each column value in row
          for (let td_value of content__table_body.getElementsByClassName("content__table_body_td_value")){
            if (title_2_value == ""){
              title_2_value += td_value.innerText;
            }else{
              title_2_value += "," +  td_value.innerText
            }
          };
          title_2_value_array.push(title_2_value);
        }
        content__table_body_td_value_arr.push(title_2_value_array)
      }
    }
    var data = new FormData();
    data.append('content__table_body_td_value_arr',JSON.stringify(content__table_body_td_value_arr));
    data.append('title_2_title_arr',JSON.stringify(title_2_title_arr));
    jQuery.ajax({
      url: "/report/<%= @report_template.id %>/submit_report",
      data: data,
      cache: false,
      contentType: false,
      processData: false,
      method: 'PUT',
      success: function(data){
          alert(data);
      }
    });
  }
