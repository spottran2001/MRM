  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      overflow: hidden
    }
    .container {
      display: flex;
      max-height: 100vh;
      max-width: 100%;
      padding: 0px;
    }
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    /* MENU */
    .menu {
      background-color: white;
      width: 100px;
      max-height: 100%;
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      transition: all 0.5s;
      display: block;
      position: relative;
    }
    .menu__title {
      text-align: center;
      font-size: 14px;
      font-weight: bold;
    }
    .menu__logo {
      width: 100%;
      padding: 20px;
    }
    .menu__logo img {
      width: 100%;
    }
    .menu__items {
      width: 100%;
      text-align: center;
      padding: 20px 0px 20px;
      cursor: pointer;
      color: #dadada;
      display: block;
    }
    .menu__items--separation {
      margin-bottom: 50px;
      padding-bottom: 90px;
    }
    .menu__icon i {
      font-size: 20px;
    }
    .menu__icon {
      padding: 6px 0px;
    }
    .menu__active {
      border-left: 2px solid #d72134;
      color: #d72134 !important;
    }
    /* Content */
    .content {
      background-color: #f5f5f5;
      width: 100%;
      padding: 30px 60px 20px 30px;
      overflow-Y: scroll 
    }
    .content__title {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .content__name {
      padding: 40px 0px 10px 40px;
      font-size: 30px;
    }
    .content__breadcrumb {
      font-size: 16px;
      font-weight: bold;
      margin-left: 20px;
    }
    .breadcrumb__name {
      display: inline-block;
      margin-left: 10px;
      color: #f34f68;
      padding: 12px 0px;
    }
    .content__user {
      display: flex;
      align-items: center;
    }
    .user_icon {
      font-size: 24px;
      margin-right: 14px;
      margin-top: 6px;
    }
    .user__info {
      margin-right: 10px;
      font-size: 16px;
      text-align: right;
    }
    .user__info p:first-child {
      text-align: right;
    }
    .user__img img {
      border-radius: 50%;
      width: 40px;
      height: 100%;
    }
    .user__img {
      margin-right: 10px;
    }
    .user__detail {
      font-size: 20px;
      cursor: pointer;
      color: gray;
    }
    .content__generality {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      margin: 20px 0px;
      padding: 14px 20px;
      background: #f1f1f1;
      border-radius: 8px;
    }
    .generality__total {
      display: flex;
      align-items: center;
    }
    .generality__select {
      margin-left: 10px;
      margin-right: 20px;
    }
    .generality__select select {
      width: 60px;
      height: 40px;
      border-radius: 4px;
      outline: none;
    }
    .content__btn {
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      border-radius: 10px;
    }
    .content__btn button {
      cursor: pointer;
      padding: 12px 20px;
      outline: none;
      border-radius: 10px;
      font-size: 16px;
      background-color: white;
      border: 1px solid gray;
      color: black;
    }
    .content__btn button i {
      margin-left: 6px;
    }
    .generality__search {
      position: relative;
    }
    .generality__search_icon {
      position: absolute;
      top: 5px;
      left: 6px;
      font-size: 12px;
      color: gray;
      cursor: pointer;
      padding: 10px;
    }
    .generality__search input {
      padding: 14px 40px;
      box-shadow: rgba(0, 0, 0, 0.25) 0px 0px 20px 0px;
      border: none;
      outline: none;
      border-radius: 6px;
    }
    .content__table {
      width: 100%;
      text-align: center;
      border: none;
      border-spacing: 0px;
      border-radius: 12px;
      overflow: hidden;
      margin-top: 25px;
    }
    .content__table th {
      color: white;
      padding: 20px 10px;
    }
    .content__table-checkbox {
      margin-top: 4px;
    }
    .content__table-checkbox-report {
      margin-left: 5px;
    }
    .content__table_body {
      font-size: 16px;
      background-color: #E5E5E5;
    }
