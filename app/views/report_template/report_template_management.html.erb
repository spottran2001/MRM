      margin-top: 10px;
      display: none;
      transition: all 0.5s;
    }
    .menu__dropdown_list {
      list-style: none;
    }
    .menu__dropdown_list li {
      color: black;
      padding: 10px 0px;
    }
    .icon__notification {
      width: 15px;
      height: 15px;
      background-color: #d72134;
      border-radius: 50%;
      margin-top: 4px;
    }
    .menu__regime {
      display: flex;
      align-items: center;
      margin: 10px 40px 0px 20px;
      padding: 10px 12px;
      justify-content: center;
      background: #f5f5f5;
      border-radius: 10px;
    }
    .regime__light,
    .regime__dark {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .regime__dark {
      margin-left: 10px;
      background: gray;
      color: black;
      padding: 6px 10px;
      border-radius: 40px;
    }
    .regime__light {
      background-color: white;
      padding: 6px 10px;
      border-radius: 40px;
      color: black;
    }
    .regime__light p,
    .regime__dark p {
      margin-left: 10px;
    }
    /* Toggle */
    #statistics .show {
      display: block;
    }
    .show .menu__icon_open i {
      transform: rotate(-180deg);
    }
    .show ~ .menu__dropdown_nav {
      display: block;
    }
    #btn-dropdown {
      position: absolute;
      left: 234px;
      top: 40px;
    }
    #btn-dropdown button {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background-color: #d72134;
      color: black;
      border: none;
      outline: none;
      cursor: pointer;
      text-align: center;
    }
    #btn-dropdown button i {
      font-size: 16px;
      transition: all 0.5s;
    }
    #btn-menu {
      position: absolute;
      left: 78px;
      top: 30px;
    }
    #btn-menu button {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background-color: #d72134;
      color: black;
      border: none;
      outline: none;
      cursor: pointer;
      text-align: center;
    }
    #btn-menu button i {
      font-size: 16px;
      transition: all 0.5s;
    }
    .generality__options {
      display: flex;
      align-items: center;
    }
    .btn__addmember button {
      display: flex;
      align-items: center;
      padding: 14px 16px;
      border: none;
      outline: none;
      background-color: blue;
      color: white;
      cursor: pointer;
      border-radius: 12px;
    }
    .btn__addmember button p {
      margin-left: 6px;
    }
    .btn__addfile {
      margin: 0px 24px;
    }
    .btn__CreateReport button {
      display: flex;
      align-items: center;
      padding: 14px 16px;
      border-radius: 12px;
      border: none;
      color: white;
      background-color: #678ef8;
      cursor: pointer;
    }
    .btn__CreateReport button p {
      margin-left: 6px;
    }
    .select__options select {
      padding: 8px 6px;
      border-radius: 10px;
    }
    .container__info {
      height: 560px;
      width: 100%;
      border-radius: 14px;
      overflow: hidden;
      position: relative;
    }
    .info__img {
      background-image: url("./assets/img/Bird.jpg");
      width: 20%;
      float: left;
      height: 100%;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
    }
    .info__content {
      background-color: white;
      padding: 100px 0px 100px 100px;
      float: right;
      width: 80%;
      height: 100%;
    }
    .info__title {
      margin-left: 32px;
    }
    .info__title h1 {
      padding-bottom: 6px;
    }
    .info {
      font-size: 16px;
      color: gray;
      margin: 6px 0px 40px 0px;
      border-top: 4px solid red;
    }
    .info__list li {
      display: flex;
      align-items: center;
      list-style: none;
      font-size: 16px;
      margin: 40px 0px;
    }
    .info__list li p {
      margin: 0px 80px 0px 20px;
      color: gray;
      font-size: 18px;
      text-align: left;
    }
    .info__list li span {
      width: 12px;
      height: 12px;
      border: 1px solid gray;
      border-radius: 50%;
    }
    .info__user_img {
      position: absolute;
      top: 50px;
      left: 190px;
      border-radius: 50%;
      border: 4px solid white;
      width: 164px;
      height: 164px;
    }
    .info__user_img img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
    }
    .btn_edit-info {
      position: absolute;
      top: 20px;
      left: 20px;
    }
    .btn_edit-info button {
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      outline: none;
      background-color: white;
      border-radius: 40px;
    }
    /* Modal */
    .Modal__container {
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: rgb(0 0 0 / 0.5);
    }
    #Modal__addbomon {
      display: none;
    }
