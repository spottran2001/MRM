      outline: none;
      border: none;
      border-radius: 4px;
    }
    .btn i {
      font-size: 20px;
      color: white;
    }
    .gold {
      background-color: #f4924b;
    }
    .blue {
      background-color: #1b59f8;
    }
    .green {
      background-color: #5cbd4c;
    }
    .yellow{
      background-color: #FFBF24
    }
    .paging {
      display: flex;
      justify-content: end;
      align-items: center;
      margin-top: 20px;
    }
    .paging--active {
      background-color: #dc546c !important;
      color: white !important;
    }
    .paging button {
      padding: 10px 14px;
      margin: 0px 8px;
      border: none;
      background-color: rgb(241, 241, 241);
      cursor: pointer;
      font-size: 16px;
      border-radius: 10px;
      outline: none;
    }
    .menu__dropwdown {
      width: 250px;
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      position: relative;
      padding: 2px;
      display: none;
      transition: all 0.5s;
