    }
    .checkbox-row {
      display: flex;
      align-items: center;
    }
    .content__table_body td {
      padding: 10px 0px;
    }
    .approve {
      background-color: #5cbd4c;
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      color: white;
    }
